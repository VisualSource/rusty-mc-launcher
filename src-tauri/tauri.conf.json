{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"productName": "Rusty Minecraft Launcher",
	"identifier": "us.visualsource.rmcl",
	"version": "0.8.0",
	"build": {
		"beforeBuildCommand": "pnpm build",
		"beforeDevCommand": "pnpm dev",
		"frontendDist": "../dist",
		"devUrl": "http://localhost:5173"
	},
	"bundle": {
		"active": true,
		"category": "Utility",
		"targets": ["msi", "nsis"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"timestampUrl": ""
		},
		"longDescription": "A Minecraft launcher and mod installer.",
		"resources": ["./migrations/*"],
		"shortDescription": "Game Launcher",
		"createUpdaterArtifacts": "v1Compatible"
	},
	"plugins": {
		"deep-link": {
			"mobile": [],
			"desktop": {
				"schemes": []
			}
		},
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENCRUI2NTY1NDBFQzIwRTEKUldUaElPeEFaV1hyeTFweE15UkJzb1kwMzcrY2NTWkRHR3RBZTdxUWNkQmVpazd3L2ErNXp5TlIK",
			"endpoints": [
				"https://github.com/VisualSource/rusty-mc-launcher/releases/latest/download/latest.json"
			]
		}
	},
	"app": {
		"windows": [
			{
				"userAgent": "VisualSource/rusty-mc-launcher/0.9.x",
				"fullscreen": false,
				"height": 630,
				"resizable": true,
				"minHeight": 630,
				"minWidth": 1080,
				"title": "Minecraft Launcher",
				"width": 1080,
				"decorations": false,
				"dragDropEnabled": false
			}
		],
		"security": {
			"capabilities": ["migrated"],
			"assetProtocol": {
				"scope": ["$APPDATA/**/*"],
				"enable": true
			},
			"csp": null
		}
	}
}
